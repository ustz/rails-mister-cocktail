<div class="container form-container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="title">
        <h1>New</h1>
      </div>
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'btn btn-success' %>
      <%= link_to "Back", root_path %>
      <% end %>
    </div>
  </div>
</div>
